<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/black"
        android:gravity="center"
        android:padding="10dp"
        android:text="Hola Lucas"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/numerodos"
        />

    <View
        android:id="@+id/numerodos"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_green_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/numerotres"

        />
    <View
        android:id="@+id/numerotres"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_green_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numerodos"
        app:layout_constraintBottom_toTopOf="@+id/numerocuatro"
        android:layout_marginTop="20dp"
        />

    <View
        android:id="@+id/numerocuatro"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_green_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numerotres"
        app:layout_constraintBottom_toTopOf="@+id/numerocinco"
        android:layout_marginTop="20dp"
        />
    <View
        android:id="@+id/numerocinco"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_green_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numerocuatro"
        app:layout_constraintBottom_toTopOf="@+id/numeroseis"
        android:layout_marginTop="20dp"
        />
    <View
        android:id="@+id/numeroseis"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_green_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numerocinco"
        app:layout_constraintBottom_toTopOf="@+id/numerosiete"
        android:layout_marginTop="20dp"
        />
    <View
        android:id="@+id/numerosiete"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_green_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numeroseis"
        app:layout_constraintBottom_toTopOf="@+id/numeroocho"
        android:layout_marginTop="20dp"
        />
    <View
        android:id="@+id/numeroocho"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_green_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numerosiete"
        app:layout_constraintBottom_toTopOf="@+id/numeronueve"
        android:layout_marginTop="20dp"
        />
    <View
        android:id="@+id/numeronueve"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_green_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numeroocho"
        android:layout_marginTop="20dp" />
    <ImageView
        android:id="@+id/miImagen"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/nombrebueno"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/numeronueve"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.887" />

    <Button
        android:id="@+id/btnOne"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="One"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.948"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="28dp" />

    <Button
        android:id="@+id/btnTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="Two"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.931"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnOne" />

    <Button
        android:id="@+id/btnThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="Three"
        app:layout_constraintEnd_toEndOf="@id/btnOne"
        app:layout_constraintStart_toStartOf="@id/btnOne"
        app:layout_constraintTop_toBottomOf="@id/btnTwo" />
    <!-- Ahora está debajo de la pirámide -->

</androidx.constraintlayout.widget.ConstraintLayout>