<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvChallenge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Toma un vaso de agua ðŸ’§"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_dark"
        android:padding="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="@id/imgIcon"
        app:layout_constraintStart_toEndOf="@id/imgIcon"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnNew"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="ðŸŽ² Nuevo reto"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/imgIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnDone"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="âœ… Completado"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnNew"
        app:layout_constraintStart_toStartOf="@id/btnNew"
        app:layout_constraintEnd_toEndOf="@id/btnNew"/>

    <Button
        android:id="@+id/btnHistory"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="ðŸ“œ Historial"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnDone"
        app:layout_constraintStart_toStartOf="@id/btnNew"
        app:layout_constraintEnd_toEndOf="@id/btnNew"/>

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:src="@drawable/logomoi"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnHistory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
